<h2>Posts with the tag '<%= params[:tag] %>':</h2>

<% unless @posts.empty? %>

  <% for post in @posts %>

    <article class="post">
      
      <header>
      <h1><a href="/<%= post.name %>"><%= post.title %></a></h1>
      <div class="post-meta">
      <time datetime="<%= post.date.strftime("%Y-%M-%d") %>">
        <%= post.date.strftime("%B %d, %Y") %>
      </time>
        <ul class="tags">
          <% for tag in post.tags %>
            <li><a href="/tags/<%= tag %>"><%= tag %></a></li>
          <% end %>
        </ul>
      </div>
      </header>  

      <section class="postContent">
        <%= post.to_html.split("\n").first %>
      </section>  

      <p class="read-more"><a href="/<%= post.name %>">read more &raquo;</a></p> 

    </article>
          
  <% end %>

<% else %>

  <p>No posts found... return to the <a href="/">home page</a></p>

<% end %>
