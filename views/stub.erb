<article class="post">
  
  <header>
  <h1><a href="/<%= post.name %>"><%= post.title %></a></h1>
  <div class="post-meta">
  <time datetime="<%= geek_date(post.date) %>" pubdate>
    <%= tidy_date(post.date) %>
  </time>
    <ul class="tags">
      <% for tag in post.tags %>
        <li><a href="/tags/<%= tag %>"><%= tag %></a></li>
      <% end %>
    </ul>
  </div>
  </header>  

  <section class="postContent">
    <%= post.to_html.split("\n").first %>
  </section>  

  <p class="read-more"><a href="/<%= post.name %>">read more &raquo;</a></p> 

</article>
