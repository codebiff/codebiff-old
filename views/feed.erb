<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
  <channel>
    <title><%= BLOG_TITLE %></title>  
    <description><%= BLOG_DESCRIPTION %></description>
    <link>http://www.codebiff.com</link>
    <atom:link href="http://www.codebiff.com" type="application/rss+xml" />

    <% for post in @posts %>
      <item>
        <title><%= h post.title %></title>
        <link>http://codebiff.com/<%= post.name %></link>
        <pubDate><%= Time.parse(post.date.to_s).rfc822 %></pubDate>
        <description><%= h  post.to_html %></description>
      </item>
    <% end %>
  
  </channel>
</rss>
