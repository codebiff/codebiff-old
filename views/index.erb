<% for post in @posts %>

  <article class="post">
    
    <header>
    <h1><a href="/<%= post.name %>"><%= post.title %></a></h1>
    <div class="post-meta">
    <time datetime="<%= post.date.strftime("%Y-%M-%d") %>">
      <%= post.date.strftime("%B %d, %Y") %>
    </time>
      <ul class="tags">
        <% for tag in post.tags %>
          <li><a href="/tags/<%= tag %>"><%= tag %></a></li>
        <% end %>
      </ul>
    </div>
    </header>  

    <section class="postContent">
      <%= post.to_html.split("\n").first %>
    </section>  

    <p class="read-more"><a href="/<%= post.name %>">read more &raquo;</a></p> 

  </article>
        
<% end %>





<% if POST_PAGES > 1 %>

<% @page = get_page %>
  
<div class="pagination">

  <ul>
        
    <% if @page.to_i == 1 %>
      <li>&lsaquo;</li>
    <% else %>
      <li><a href="<%= "#{request.path}?page=#{@page.to_i - 1}" %>">&lsaquo;</a></li>
    <% end %>
    


    <% POST_PAGES.times do |p| %>
      
      <% if @page.to_i == p+1 %>
        <li class="current"><%= p+1 %></li>
      <% else %>  
        <li><a href="<%= "#{request.path}?page=#{p+1}" %>"><%= p+1 %></a></li>
      <% end %>

    <% end %>



    <% if @page.to_i == POST_PAGES %>
      <li>&rsaquo;</li>
    <% else %>
      <li><a href="<%= "#{request.path}?page=#{@page.to_i + 1}" %>">&rsaquo;</a></li>
    <% end %>


  </ul>

</div>

<% end %>
