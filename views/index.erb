<% for post in @posts %>

  <article class="post">
    
    <header>
    <h1><a href="/<%= post.name %>"><%= post.title %></a></h1>
    <time datetime="<%= post.date.strftime("%Y-%M-%d") %>">
      <%= post.date.strftime("%B %d, %Y") %>
    </time>
    <p>
      <ul class="tags">
        <% for tag in post.tags %>
          <li><a href="/tags/<%= tag %>"><%= tag %></a></li>
        <% end %>
      </ul>
    </p>
    </header>  

    <section class="postContent">
      <%= post.to_html.split("\n").first %>
    </section>  

    <p class="read-more"><a href="/<%= post.name %>">read more &raquo;</a></p> 

  </article>
        
<% end %>
